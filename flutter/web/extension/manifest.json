{
  "manifest_version": 3,
  "name": "MoneroExtension",
  "version": "0.0.1",
  "description": "Monero Extension using monero-rust",

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },

  "permissions": [
    "storage",
    "sidePanel"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "action": {
    "default_icon": {
      "16": "icons/Icon-192.png",
      "48": "icons/Icon-192.png",
      "128": "icons/Icon-512.png"
    },
    "default_title": "MoneroExtension"
  },

  "background": {
    "service_worker": "background.js"
  },

  "side_panel": {
    "default_path": "index.html"
  },

  "icons": {
    "16": "icons/Icon-192.png",
    "48": "icons/Icon-192.png",
    "128": "icons/Icon-512.png"
  },

  "web_accessible_resources": [{
    "resources": ["*.wasm", "*.js"],
    "matches": ["<all_urls>"]
  }]
}
